{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "quotes": [2, "single", { "avoidEscape": true }],
        "prefer-destructuring": 0,
        "indent": "off",
        "no-unused-vars": "warn",
        "comma-dangle": "off",
        "spaced-comment": "off",
        "vars-on-top": "off"
    }
}
